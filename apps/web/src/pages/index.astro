---
import BaseLayout from '../layouts/BaseLayout.astro';

// If user is already logged in, redirect to dashboard
const accessToken = Astro.cookies.get('sb-access-token')?.value;
if (accessToken) {
  return Astro.redirect('/dashboard');
}
---

<BaseLayout title="Landing Page Generator - Deploy custom pages in seconds">
  <div class="home-page">
    <header class="hero">
      <div class="container">
        <h1>Deploy Custom Landing Pages in Seconds</h1>
        <p class="hero-subtitle">
          Automated landing page generation and deployment for your clients.
          Just fill a form, we handle the rest.
        </p>
        <div class="cta-buttons">
          <a href="/login" class="btn">Get Started</a>
        </div>
      </div>
    </header>

    <section class="features">
      <div class="container">
        <h2>How It Works</h2>
        <div class="features-grid">
          <div class="feature-card">
            <div class="feature-number">1</div>
            <h3>Sign In</h3>
            <p>Authenticate with a magic link - no password needed.</p>
          </div>
          <div class="feature-card">
            <div class="feature-number">2</div>
            <h3>Submit Form</h3>
            <p>Enter your client's details and branding information.</p>
          </div>
          <div class="feature-card">
            <div class="feature-number">3</div>
            <h3>Get Your Page</h3>
            <p>We automatically deploy to a unique URL on Cloudflare Pages.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="tech-stack">
      <div class="container">
        <h2>Built with Modern Technologies</h2>
        <ul>
          <li>‚ö° Astro for lightning-fast performance</li>
          <li>üîê Supabase for authentication and data</li>
          <li>üöÄ Cloudflare Pages for instant deployments</li>
          <li>üìß Automated email notifications</li>
        </ul>
      </div>
    </section>

    <footer class="footer">
      <div class="container">
        <p>&copy; 2026 Landing Page Generator. Built as an MVP SaaS demo.</p>
      </div>
    </footer>
  </div>

  <style>
    .home-page {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .hero {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 100px 20px;
      text-align: center;
    }

    .hero h1 {
      font-size: 48px;
      margin-bottom: 20px;
      font-weight: 700;
    }

    .hero-subtitle {
      font-size: 20px;
      margin-bottom: 40px;
      opacity: 0.95;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .cta-buttons {
      display: flex;
      gap: 16px;
      justify-content: center;
    }

    .cta-buttons .btn {
      font-size: 18px;
      padding: 14px 32px;
      background: white;
      color: #667eea;
    }

    .cta-buttons .btn:hover {
      background: #f3f4f6;
    }

    .features {
      padding: 80px 20px;
      background: white;
    }

    .features h2 {
      text-align: center;
      font-size: 36px;
      margin-bottom: 50px;
      color: #111827;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 40px;
      max-width: 900px;
      margin: 0 auto;
    }

    .feature-card {
      text-align: center;
    }

    .feature-number {
      width: 60px;
      height: 60px;
      background: #667eea;
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      font-weight: 700;
      margin: 0 auto 20px;
    }

    .feature-card h3 {
      font-size: 24px;
      margin-bottom: 12px;
      color: #111827;
    }

    .feature-card p {
      color: #6b7280;
      line-height: 1.6;
    }

    .tech-stack {
      padding: 80px 20px;
      background: #f9fafb;
    }

    .tech-stack h2 {
      text-align: center;
      font-size: 36px;
      margin-bottom: 40px;
      color: #111827;
    }

    .tech-stack ul {
      list-style: none;
      max-width: 500px;
      margin: 0 auto;
    }

    .tech-stack li {
      padding: 16px 0;
      font-size: 18px;
      color: #374151;
      border-bottom: 1px solid #e5e7eb;
    }

    .tech-stack li:last-child {
      border-bottom: none;
    }

    .footer {
      background: #111827;
      color: white;
      padding: 40px 20px;
      text-align: center;
      margin-top: auto;
    }

    .footer p {
      color: #9ca3af;
    }

    @media (max-width: 768px) {
      .hero h1 {
        font-size: 36px;
      }

      .hero-subtitle {
        font-size: 18px;
      }

      .features h2,
      .tech-stack h2 {
        font-size: 28px;
      }
    }
  </style>
</BaseLayout>
